<div class="grid-container">
  <div>
    <div>
      <h1>Medical Plan</h1>
      <button class="button button1">Add</button>
      <button class="button button2">Edit</button>
      <br></br>
    </div>

    <table class="table table-sortable">
      <thead>
        <tr>
          <th>Medical Plan</th>
          <th>Medical Card (Front)</th>
          <th>Medical Card (Back)</th>
          <th>Available For ...</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < data.medicalPlan.length; i++) { %>
          <tr>
            <td><%= data.medicalPlan[i].medicalPlanName %></td>
            <td><%= data.medicalPlan[i].medicalCardFront %></td>
            <td><%= data.medicalPlan[i].medicalCardBack %></td>
            <td><a data-toggle="popover" title="Available for ..." data-content="<%= data.medicalPlan[i].name %>">Name List</a></td>
          </tr>
       <% } %>
      </tbody>
    </table>
  </div>

  <div>
    <div>
      <h1>Medical Records</h1>
    </div>

    <table class="table table-sortable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Date</th>
        </tr>
      </thead> 
      <tbody>
        <% for(var i=0; i < data.medicalLeave.length; i++) { %>
          <tr>
            <td><%= data.medicalLeave[i].name %></td>
            <td><%= data.medicalLeave[i].reason %></td>
            <td><%= data.medicalLeave[i].date %></td>
          </tr>
       <% } %>
      </tbody>
    </table>
  </div>


  <div>
    <div>
      <h1>Clinic List</h1>
      <button class="button button3">Add</button>
      <button class="button button4">Edit</button>
      <br></br>
    </div>

    <table class="table table-sortable">
      <thead>
        <tr>
          <th>Clinic</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Available For ...</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < data.clinicList.length; i++) { %>
          <tr>
            <td><%= data.clinicList[i].clinicName %></td>
            <td><%= data.clinicList[i].latitude %></td>
            <td><%= data.clinicList[i].longitude %></td>
            <td><a data-toggle="popover" title="Available for ..." data-content="<%= data.clinicList[i].name %>">Name List</a></td>
          </tr>
       <% } %>
      </tbody>
    </table>
  </div>


  <div>
    <div>
      <h1>Insurance Coverage</h1>
      <button class="button button5">Add</button>
      <button class="button button6">Edit</button>
      <br></br>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>Type of Insurance</th>
          <th>Description</th>
          <th>Contact Person</th>
          <th>Contact Number</th>
          <th>Available For...</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < data.insuranceCoverage.length; i++) { %>
          <tr>
            <td><%= data.insuranceCoverage[i].typeofInsurance %></td>
            <td><%= data.insuranceCoverage[i].description %></td>
            <td><%= data.insuranceCoverage[i].contactPerson %></td>
            <td><%= data.insuranceCoverage[i].contactNumber %></td>
            <td><a data-toggle="popover" title="Available for ..." data-content="<%= data.insuranceCoverage[i].name %>">Name List</a></td>
          </tr>
       <% } %>
      </tbody>
    </table>
  </div>
</div>
<%- include('partials/medicalPlanList') %>