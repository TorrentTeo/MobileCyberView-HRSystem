<div class="grid-container">
  <div>
    <div>
      <h1>Rewards</h1>
      <button type="button" class="button button1" id="addreward" data-toggle="modal" data-target="#exampleModal">Add</button>
      <button type="button" class="button button1" id="editreward" data-toggle="modal" data-target="#exampleModal1">Edit</button>
      <br></br>
    </div>

    <table class="table table-sortable">
      <thead>
        <tr>
          <th>Reward Name</th>
          <th>Description</th>
          <th>Start From</th>
          <th>Expiring At</th>
          <th>Available for ...</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < data.reward.length; i++) { %>
          <% if (data.reward[i].valid === true) {%>
          <tr>
            <td><%= data.reward[i].rewardName %></td>
            <td><%= data.reward[i].description %></td>
            <td><%= data.reward[i].validFrom %></td>
            <td><%= data.reward[i].expiryDate %></td>
            <td><a data-toggle="popover" title="Available for ..." data-content="<%= data.reward[i].namelist %>">Name List</a></td>
          </tr>
          <% } %>
       <% } %>
      </tbody>
    </table>
  </div>
</div>

