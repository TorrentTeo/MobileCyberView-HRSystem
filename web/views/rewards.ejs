<div class="grid-container">
  <div>
    <div>
      <h1>Rewards</h1>
      <div class="dropdown">
        <button class="button button1">Add</button>
        <button class="button button2">Edit</button>
        <form action="" class="search-form">
          <input type="search" id="search_rewards" class="search-input" />
          <i class="fa fa-search"></i>
        </form>
      </div>
      <br></br>
    </div>

    <table class="table table-sortable">
      <thead>
        <tr>
          <th>Reward Name</th>
          <th>Description</th>
          <th>Start From</th>
          <th>Expiring At</th>
          <th>Available for ...</th>
        </tr>
      </thead>
      <tbody id="table_body_rewards">
        <% for(var i=0; i < data.reward.length; i++) { %>
          <tr>
            <td>
              <%= data.reward[i].name %>
            </td>
            <td>
              <%= data.reward[i].description %>
            </td>
            <td>
              <%= data.reward[i].validFrom %>
            </td>
            <td>
              <%= data.reward[i].expiryDate %>
            </td>
            <td><a data-toggle="popover" title="Available for ..." data-content="<%= data.reward[i].namelist %>">Name
                List</a></td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>
</div>